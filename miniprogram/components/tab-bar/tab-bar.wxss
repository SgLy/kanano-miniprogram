.tab-bar {
  position: absolute;
  bottom: 0;
  left: 0;
  box-shadow: 0 0 2px rgba(0,0,0,.14),
              0 -2px 4px rgba(0,0,0,.28);
}
.tab-bar .tabs-container {
  width: 100vw;
  display: flex;
  flex-direction: row;
}
.tab-bar .tab {
  padding: 0.5em;
  flex: 1;
  text-align: center;
  font-size: 0.8em;
}
.tab-bar .tab.active {
  color: rgb(25, 115, 230);
}