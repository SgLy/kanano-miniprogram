<view class="annotator {{ vertical ? 'vertical' : '' }}">
  <view class="container">
    <view class="word"
      wx:for="{{ parsedText }}"
      wx:key="{{ idx+item.upper+item.lower }}"
    >
      <text class="upper">{{ item.pronunciation }}</text>
      <text decode class="lower">{{ item.surface_form !== ' ' ? item.surface_form : '&nbsp;' }}</text>
    </view>
  </view>
</view>